<div id="container" class="container">
  <div id="section" class="row">
    <div id="profile-card-wrapper" class="col-md-4">
      <div class="profile-card">
        <span class="profile-pic-container">
          <div class="profile-pic">
            <img class="media-object img-circle center-block"
              alt="Profile Image"
              itemprop="image"
              src=<%= @profile.image %>>
          </div>
        </span>
        <div class="name and profession">
          <h3 class="text-center text-bolder name" itemprop="name"><%= @profile.name %></h3>
          <h5 class="text-muted text-center" itemprop="jobTitle"><%= @profile.profession %></h5>
          <h5 class="text-muted text-center" itemprop="jobTitle"><%= @profile.jobTitle %> @ <%= @profile.company %></h5>
        </div>
      </div>
      one
    </div>
    <div id="background" class="col-md-8">
      <div id="background-details" class="container">
        <div id="about" class="row">
          <div class="detail-icon col-md-1">
            <div class="fa fa-user">
            </div>
          </div>
          <div class="detail-content col-md-5">
            <%= @about.nil? ? "" : @about%>
          </div>
        </div>
        <div id="experience" class="row">
          <div class="detail-icon col-md-1">
            <div class="fa fa-building">
            </div>
          </div>
          <div class="detail-content col-md-5">
            <% if !@experiences.nil? %>
              <% @experiences.each do |experience| %>
                <%= render partial: "experience", object: experience %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div id="skills" class="row">
          <div class="detail-icon col-md-1">
            <div class="fa fa-code">
            </div>
          </div>
          <div class="detail-content col-md-5">
            <% if !@skills.nil? %>
              <% @skills.each do |skill| %>
                <%= render partial: "skill", object: skill %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div id="interests" class="row">
          <div class="detail-icon col-md-1">
            <div class="fa fa-heart">
            </div>
          </div>
          <div class="detail-content col-md-5">
              <% if !@interests.nil? %>
                <% @interests.each do |interest| %>
                  <%= render partial: "interest", object: interest %>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
